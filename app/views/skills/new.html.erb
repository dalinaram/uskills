<div class="bg">
  


    <%= simple_form_for @skill do |f| %>
      <div class="container mt-4">
        <h1 class="text-center" style="color: aliceblue;">Nouvelle compétence</h1>

        <div class="cardm mt-4" style="color: aliceblue;">
          <div class="card-body">
            <strong></strong><%= f.input :title, label: "Title:" , input_html: { class: "form-control" } %></strong>

              <strong><%= f.input :description, label: "Description:" , input_html: { class: "form-control" } %></strong>


                <div class="text-center mt-3">
                  <%= f.button :submit, "Rajouter une compétence" , class: "btn btn-primary" %>
                </div>
          </div>
        </div>
      </div>
      <% end %>
 
</div>