
<div class="bg">
<%= simple_form_for @skill, url: skill_path(@skill), method: :patch do |f| %>
  <div class="container mt-4">
    <h1 class="text-center" style="color: aliceblue;">Modifier Mes Compétences en <%= @skill.title %></h1>

    <div class="cardm mt-4">
      <div class="card-body" style="color: aliceblue;">
        <%= f.input :title, label: "Titre", input_html: { class: "form-control" } %>

        <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>



        <div class="text-center mt-3" style="color: aliceblue;">
          <%= f.button :submit, "Mise à jour", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>