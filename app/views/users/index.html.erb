<%= render "shared/section" %>
<%= render "shared/category" %>
<% if current_user.role == 'learn' %>
<div class="container mt-4">
  <h2 class="section-title">Nos Meilleurs Formateurs</h2>
  <div class="row">
    <% @teachers.each do |t| %>
      <div class="col-md-3 mb-4">
        <div class="card_formateur">
          <div class="infos">
            <div class="rounded mx-auto d-block">
              <%= cl_image_tag(t.photo.key, height: 112, width: 100, crop: :fill) if t.photo.attached? %>
            </div>
            <div class="info">
              <div>
                <p class="name"><%= t.name %> <%= t.last_name %></p>
                <p class="function"><i class="fas fa-book"></i> <%= t.interest %></p>
              </div>
              <div class="stats">
                <p class="flex flex-col">
                  Contributions
                  <span class="state-value">98</span>
                </p>
                <p class="flex">
                  Avis
                  <span class="state-value"><%= render_rating(t.rating) %> </span>
                </p>
              </div>
               <div class="btn-message">
               <%= link_to user_path(t), class: "btn-message ml-2" do %>
              <svg viewBox="0 0 16 16" class="bi bi-chat-dots-fill" fill="white" height="16" width="16">
                <path d="M0 0h16v16H0z"/>
              </svg>
            <% end %>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

