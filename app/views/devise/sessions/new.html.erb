<div class="container mt-5">
  <h2 class="text-center">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" },
                  wrapper_html: { class: "mb-3" } %>
    </div>

    <div class="mb-3">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" },
                  wrapper_html: { class: "mb-3" } %>
    </div>

    <div class="mb-3 form-check">
      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-check-input" } %>
    </div>

    <div class="text-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
